@model UserViewModel

<div class="card shadow-sm">
    <div class="card-header bg-success text-white">
        <h4 class="mb-0"><i class="fas fa-user-plus"></i> Criar Nova Conta</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" id="fromCadastro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h5 class="text-muted border-bottom pb-2">Dados Pessoais</h5>
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Nome Completo" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="email@exemplo.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Cpf" class="form-label"></label>
                    <input asp-for="Cpf" class="form-control cpf-mask" placeholder="000.000.000-00" maxlength="11" inputmode="numeric" />
                </div>
                <div class="col-md-4">
                    <label asp-for="Rg" class="form-label"></label>
                    <input asp-for="Rg" class="form-control" maxlength="8" />
                </div>
                <div class="col-md-4">
                    <label asp-for="DataNascimento" class="form-label"></label>
                    <input asp-for="DataNascimento" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Telefone" class="form-label"></label>
                    <input asp-for="Telefone" class="form-control cel-mask" placeholder="(00) 00000-0000" maxlength="15" inputmode="numeric" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Password" class="form-label">Senha</label>
                    <input asp-for="Password" type="password" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Confirmar Senha</label>
                    <input type="password"
                           id="ConfirmPassword"
                           class="form-control" />
                    <small class="text-danger d-none" id="confirmPasswordError">
                        As senhas não coincidem
                    </small>
                </div>
            </div>

            <h5 class="text-muted border-bottom pb-2">Endereço</h5>
            <div class="row g-3 mb-4">
                <div class="col-md-7">
                    <label>Logradouro</label>
                    <input asp-for="Endereco.Rua" class="form-control" />
                </div>
                <div class="col-md-7">
                    <label>Bairro</label>
                    <input asp-for="Endereco.Bairro" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label>Estado</label>
                    <input asp-for="Endereco.Estado" class="form-control" />
                </div>
                <div class="col-md-7">
                    <label>Cidade</label>
                    <input asp-for="Endereco.Cidade" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label>Nº</label>
                    <input asp-for="Endereco.Numero" class="form-control" />
                </div>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success px-5">Cadastrar</button>
                <a asp-action="Index" class="btn btn-link text-secondary">Já tenho conta</a>
            </div>
        </form>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

