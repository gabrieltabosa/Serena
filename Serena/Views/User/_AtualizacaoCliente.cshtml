@model DashboardViewModel<UserViewModel>


<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h4 class="mb-4 text-primary"><i class="fas fa-user-edit"></i> Meu Perfil</h4>

                <form asp-action="Update" method="post">
                    <input type="hidden" asp-for="CurrentItem.Id" />

                    <div class="row">
                        <div class="col-md-7">
                            <div class="row g-3">
                                <input type="hidden" asp-for="CurrentItem.Endereco.Id" />
                                <div class="col-12">
                                    <label asp-for="CurrentItem.Name" class="form-label"></label>
                                    <input asp-for="CurrentItem.Name" class="form-control" />
                                    <span asp-validation-for="CurrentItem.Name" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="CurrentItem.Email" class="form-label"></label>
                                    <input asp-for="CurrentItem.Email" class="form-control bg-light" readonly />
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="CurrentItem.Telefone" class="form-label"></label>
                                    <input asp-for="CurrentItem.Telefone" class="form-control cel-mask" />
                                    <span asp-validation-for="CurrentItem.Telefone" class="text-danger"></span>
                                </div>
                                
                                <div class="col-md-6">
                                    <label asp-for="CurrentItem.Cpf" class="form-label"></label>
                                    <input asp-for="CurrentItem.Cpf" class="form-control cpf-mask bg-light" readonly />
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="CurrentItem.DataNascimento" class="form-label"></label>
                                    <input asp-for="CurrentItem.DataNascimento" class="form-control bg-light" readonly />
                                </div>
                                <input type="hidden" asp-for="SessionId" />
                                <input type="hidden" asp-for="UserId" />
                            </div>

                            <div class="mt-4">
                                <h6 class="text-secondary border-bottom pb-2 d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-phone-alt"></i> Contatos de Apoio</span>
                                    <button type="button" class="btn btn-sm btn-outline-success" onclick="addApoio()">
                                        <i class="fas fa-plus"></i> Adicionar
                                    </button>
                                </h6>

                                <div id="container-apoio" class="row g-2">
                                    @if (Model.CurrentItem.NumerosDeApoio != null)
                                    {
                                        var apoios = Model.CurrentItem.NumerosDeApoio.ToList();
                                        for (int i = 0; i < apoios.Count; i++)
                                        {
                                            <div class="row g-2 item-apoio mb-2" data-index="@i">
                                                <input type="hidden" name="CurrentItem.NumerosDeApoio[@i].Id" value="@apoios[i].Id" />
                                                <div class="col-md-4">
                                                    <label class="small text-muted">Tipo (Ex: Pai)</label>
                                                    <input name="CurrentItem.NumerosDeApoio[@i].Nome" value="@apoios[i].Nome" class="form-control form-control-sm" required />
                                                </div>
                                                <div class="col-md-6">
                                                    <label class="small text-muted">Número</label>
                                                    <input name="CurrentItem.NumerosDeApoio[@i].Numero" value="@apoios[i].Numero" class="form-control form-control-sm cel-mask" required />
                                                </div>
                                                <div class="col-md-2 d-flex align-items-end">
                                                    <button type="button" class="btn btn-sm btn-outline-danger w-100" onclick="removeApoio(this)">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-5 border-start">
                            <h6><i class="fas fa-map-marker-alt"></i> Localização</h6>

                            <div class="mb-2">
                                <label asp-for="CurrentItem.Endereco.Rua" class="small"></label>
                                <input asp-for="CurrentItem.Endereco.Rua" class="form-control form-control-sm" />
                                <span asp-validation-for="CurrentItem.Endereco.Rua" class="text-danger"></span>
                            </div>

                            <div class="mb-2">
                                <label asp-for="CurrentItem.Endereco.Cidade" class="small"></label>
                                <input asp-for="CurrentItem.Endereco.Cidade" class="form-control form-control-sm" />
                                <span asp-validation-for="CurrentItem.Endereco.Cidade" class="text-danger"></span>
                            </div>

                            <div class="mb-2">
                                <label asp-for="CurrentItem.Endereco.Bairro" class="small"></label>
                                <input asp-for="CurrentItem.Endereco.Bairro" class="form-control form-control-sm" />
                                <span asp-validation-for="CurrentItem.Endereco.Bairro" class="text-danger"></span>
                            </div>

                            <div class="mb-2 row">
                                <div class="col-6">
                                    <label asp-for="CurrentItem.Endereco.Numero" class="small">Número</label>
                                    <input asp-for="CurrentItem.Endereco.Numero" class="form-control form-control-sm" />
                                    <span asp-validation-for="CurrentItem.Endereco.Numero" class="text-danger"></span>
                                </div>
                                
                                <div class="col-6">
                                    <label asp-for="CurrentItem.Endereco.Estado" class="small">Estado/UF</label>
                                    <input asp-for="CurrentItem.Endereco.Estado" class="form-control form-control-sm bg-light" readonly />
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary px-4">Atualizar Perfil</button>
                        <a asp-action="ConfirmDelete" asp-route-userId="@Model.CurrentItem.Id" asp-route-sessionId="@Model.SessionId" class="btn btn-outline-danger">
                            <i class="fas fa-trash-alt"></i> Excluir minha conta
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function addApoio() {
            const container = document.getElementById('container-apoio');
            // Conta quantos itens já existem para definir o próximo índice
            const index = container.querySelectorAll('.item-apoio').length;

            const html = `
                <div class="row g-2 item-apoio mb-2" data-index="${index}">
                    <input type="hidden" name="CurrentItem.NumerosDeApoio[${index}].Id" value="0" />
                    <div class="col-md-4">
                        <label class="small text-muted">Tipo (Ex: Pai)</label>
                        <input name="CurrentItem.NumerosDeApoio[${index}].Nome" class="form-control form-control-sm" required />
                    </div>
                    <div class="col-md-6">
                        <label class="small text-muted">Número</label>
                        <input name="CurrentItem.NumerosDeApoio[${index}].Numero" class="form-control form-control-sm cel-mask" required />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="button" class="btn btn-sm btn-outline-danger w-100" onclick="removeApoio(this)">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            `;

            container.insertAdjacentHTML('beforeend', html);

            // Re-inicializa máscaras de telefone se você estiver usando alguma lib como jQuery Mask
            if(typeof $('.cel-mask').mask === "function") {
                $('.cel-mask').mask('(00) 00000-0000');
            }
        }

        function removeApoio(btn) {
            const item = btn.closest('.item-apoio');
            item.remove();
            reindexApoios();
        }

        function reindexApoios() {
            const items = document.querySelectorAll('.item-apoio');
            items.forEach((item, index) => {
                item.setAttribute('data-index', index);
                item.querySelectorAll('input').forEach(input => {
                    // Atualiza o nome para manter a sequência [0], [1], [2]...
                    const name = input.getAttribute('name');
                    if(name) {
                        input.setAttribute('name', name.replace(/\[\d+\]/, `[${index}]`));
                    }
                });
            });
        }
    </script>
}

