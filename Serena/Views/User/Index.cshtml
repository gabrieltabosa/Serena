@model Serena.Models.DashboardViewModel<UserViewModel>

@{
    ViewData["Title"] = Model.Title;
}

<div class="row">
    <div class="col-12 mb-3 d-flex justify-content-between align-items-center">
        <h1>@Model.Title</h1>

        <div>
            @if (Model.ActiveView != DashboardViewType.Login)
            {
                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-list"></i> Voltar p/ Lista
                </a>
            }

            <a asp-action="ViewCadastro" class="btn btn-success">
                <i class="fas fa-plus"></i> Novo Cadastro
            </a>

            <a asp-action="ViewLogin" class="btn btn-secondary">
                <i class="fas fa-sign-in-alt"></i> Login
            </a>
        </div>
    </div>
</div>

<hr />

<div id="dashboard-content" class="container mt-4">

    @switch (Model.ActiveView)
    {
        case DashboardViewType.Login:
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <partial name="_LoginUsuario" model="@Model.CurrentItem" />
                </div>
            </div>
            break;

        case DashboardViewType.Cadastro:
            <partial name="_CadastroCli" model="@Model.CurrentItem" />
            break;

        case DashboardViewType.Atualizacao:
            <partial name="_AtualizacaoCliente" model="@Model.CurrentItem" />
            break;

        case DashboardViewType.Exclusao:
            <partial name="_ExclusaoCliente" model="@Model.CurrentItem" />
            break;

        default:
            <div class="alert alert-warning">Selecione uma opção válida.</div>
            break;
    }

</div>
