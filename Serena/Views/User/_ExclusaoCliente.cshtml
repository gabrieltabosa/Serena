@model DashboardViewModel<UserViewModel>

<div class="card border-danger shadow-sm">
    <div class="card-body text-center p-5">
        <div class="text-danger mb-4">
            <i class="fas fa-exclamation-triangle fa-4x"></i>
        </div>
        <h3 class="mb-3">Você tem certeza?</h3>
        <p class="text-muted mb-4">
            Você está prestes a excluir a conta de <strong>@Model.CurrentItem.Name</strong>.<br>
            Esta ação removerá seu acesso e anonimizará suas denúncias.
        </p>

        <form asp-action="Delete" method="post" asp-route-userId="@Model.CurrentItem.Id" asp-route-sessionId="@Model.SessionId">
            <input type="hidden" asp-for="CurrentItem.Id" />

            <button type="submit" class="btn btn-danger btn-lg px-5 me-2">Sim, Excluir</button>

            
            <a asp-action="Edit"
               asp-route-userId="@Model.UserId"
               asp-route-sessionId="@Model.SessionId"
               class="btn btn-light btn-lg px-5">Cancelar</a>
        </form>
    </div>
</div>