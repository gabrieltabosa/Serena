@{
    // REMOVA: @model Serena.Models.UserViewModel
}

<h2 class="text-center mb-4 text-success">Crie sua Conta</h2>

<form action="/Home/Cadastrar" method="post">

    <div class="mb-3">
        <label for="inputNomeCadastro" class="form-label">Nome Completo</label>
        <input type="text" class="form-control" id="inputNomeCadastro" name="nomeCompleto" required>
    </div>

    <div class="mb-3">
        <label for="inputEmailCadastro" class="form-label">E-mail</label>
        <input type="email" class="form-control" id="inputEmailCadastro" name="email" required>
    </div>

    <div class="mb-3">
        <label for="inputTelefone" class="form-label">Celular</label>
        <input type="text" class="form-control" id="inputTelefone" name="telefone" required>
    </div>

    <div class="mb-3">
        <label for="inputCPFCadastro" class="form-label">CPF</label>
        <input type="text" class="form-control" id="inputCPFCadastro" name="cpf" maxlength="14" required>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="inputDataNascimento" class="form-label">Data de Nascimento</label>
            <input type="date" class="form-control" id="inputDataNascimento" name="dataNascimento" required>
        </div>

        <div class="col-md-6 mb-3">
            <label for="inputEstadoCivil" class="form-label">Estado Civil</label>
            <select class="form-select" id="inputEstadoCivil" name="estadoCivil" required>
                <option value="" selected disabled>Selecione</option>
                <option value="solteiro">Solteiro(a)</option>
                <option value="casado">Casado(a)</option>
                <option value="divorciado">Divorciado(a)</option>
                <option value="viuvo">Viúvo(a)</option>
                <option value="uniaoEstavel">União Estável</option>
            </select>
        </div>
    </div>

    <h5 class="mt-3 mb-3">Endereço</h5>

    <div class="mb-3">
        <label for="inputCEPCadastro" class="form-label">CEP</label>
        <input type="text" class="form-control" id="inputCEPCadastro" name="cep" required>
    </div>

    <div class="mb-3">
        <label for="inputRuaCadastro" class="form-label">Rua</label>
        <input type="text" class="form-control" id="inputRuaCadastro" name="rua" required>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="inputEstadoCadastro" class="form-label">Estado</label>
            <input type="text" class="form-control" id="inputEstadoCadastro" name="estado" required>
        </div>

        <div class="col-md-6 mb-3">
            <label for="inputCidadeCadastro" class="form-label">Cidade</label>
            <input type="text" class="form-control" id="inputCidadeCadastro" name="cidade" required>
        </div>
    </div>

    <h5 class="mt-3 mb-3">Criação de Senha</h5>

    <div class="mb-3">
        <label for="inputSenhaCadastro" class="form-label">Crie uma Senha</label>
        <input type="password" class="form-control" id="inputSenhaCadastro" name="senha" required>
    </div>

    <div class="mb-3">
        <label for="inputConfirmarSenha" class="form-label">Confirmar Senha</label>
        <input type="password" class="form-control" id="inputConfirmarSenha" name="confirmarSenha" required>
    </div>

    <div class="d-grid gap-2 mt-4">
        <button type="submit" class="btn btn-success btn-lg">Cadastrar</button>
    </div>
</form>

<div class="text-center mt-3">
    Já tem uma conta?
    <a href="#" id="link-para-login" class="text-decoration-none fw-bold">**Fazer Login**</a>
</div>