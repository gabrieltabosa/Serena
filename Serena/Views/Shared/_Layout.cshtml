@{
    string sessionId = null;
    string userId = null;

    if (Model != null)
    {
        // Usa reflection para evitar erro de tipo genérico
        var modelType = Model.GetType();

        sessionId = modelType.GetProperty("SessionId")?.GetValue(Model)?.ToString();
        userId = modelType.GetProperty("UserId")?.GetValue(Model)?.ToString();
    }

    sessionId ??= Context.Request.Query["sessionId"].ToString();
    userId ??= Context.Request.Query["userId"].ToString();
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Serena</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Serena.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white fw-bold"
                   asp-controller="User"
                   asp-action="Index">
                    Serena
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @* Menu só aparece se houver "sessão" válida *@
                        @if (!string.IsNullOrEmpty(sessionId))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white"
                                   asp-controller="Denuncia"
                                   asp-action="Index"
                                   asp-route-userId="@userId"
                                   asp-route-sessionId="@sessionId">
                                    <i class="fas fa-list-alt me-1"></i> Minhas Denúncias
                                </a>
                            </li>
                        }
                    </ul>

                    @if (!string.IsNullOrEmpty(sessionId))
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-white"
                                   asp-controller="User"
                                   asp-action="Edit"
                                   asp-route-userId="@userId"
                                   asp-route-sessionId="@sessionId">
                                    <i class="fas fa-user-edit me-1"></i> Perfil
                                </a>
                            </li>

                            <li class="nav-item">
                                <form asp-controller="User"
                                      asp-action="Logout"
                                      method="post"
                                      class="d-inline">
                                    <input type="hidden" name="sessionId" value="@sessionId" />
                                    <button type="submit" class="nav-link btn btn-link text-white">
                                        <i class="fas fa-sign-out-alt me-1"></i> Sair
                                    </button>
                                </form>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">

            @* Mantém o sessionId circulando nos formulários *@
            @if (!string.IsNullOrEmpty(sessionId))
            {
                <input type="hidden" name="sessionId" value="@sessionId" />
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Serena
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/validador.js"></script>

    
    @if (!string.IsNullOrEmpty(sessionId))
    {
        <script>
            setTimeout(() => {
                window.location.href = "/User";
            }, 10 * 60 * 1000);
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>

