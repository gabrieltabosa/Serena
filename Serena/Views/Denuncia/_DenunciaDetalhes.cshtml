@model DashboardViewModel<DenunciaViewModel>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="text-primary mb-0">Protocolo #@Model.CurrentItem.Id.ToString("D5")</h5>
                    <span class="badge bg-info px-3 py-2">@Model.CurrentItem.Status</span>
                </div>

                <p class="text-muted small">Registrado em: @Model.CurrentItem.CriadoEm.ToString("dd/MM/yyyy HH:mm")</p>

                <h6 class="fw-bold mt-4">Tipo de Violência:</h6>
                <p>@Model.CurrentItem.TipoViolencia.GetDisplayName()</p>

                <h6 class="fw-bold mt-3">Descrição do Relato:</h6>
                <div class="p-3 bg-light rounded italic">
                    "@Model.CurrentItem.Descricao"
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-0 mb-3">
            <div class="card-body">
                <h6 class="fw-bold text-secondary"><i class="fas fa-map-marked-alt me-2"></i>Localização</h6>
                <hr>
                @if (Model.CurrentItem.Endereco != null)
                {
                    <p class="mb-1"><strong>@Model.CurrentItem.Endereco.Rua, @Model.CurrentItem.Endereco.Numero</strong></p>
                    <p class="mb-1">@Model.CurrentItem.Endereco.Cidade - @Model.CurrentItem.Endereco.Estado</p>
                    <p class="text-muted small">Numero: @Model.CurrentItem.Endereco.Numero</p>
                }
                else
                {
                    <p class="text-muted">Endereço não informado.</p>
                }
            </div>
        </div>

        <div class="card bg-light border-0">
            <div class="card-body text-center">
                <p class="small mb-2">Precisa de ajuda imediata?</p>
                <a href="tel:180" class="btn btn-danger w-100">
                    <i class="fas fa-phone-alt me-2"></i>Ligar para 180
                </a>
            </div>
        </div>
    </div>
</div>
