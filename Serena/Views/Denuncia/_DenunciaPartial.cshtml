@model Serena.Models.DenunciaPageViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

<div class="row">
    <!-- Histórico -->
    <div class="col-12 col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-header">
                <strong>Histórico de denúncias</strong>
            </div>
            <div class="card-body p-0">
                @if (Model.Historico == null || !Model.Historico.Any())
                {
                    <div class="p-3 text-muted">Nenhuma denúncia encontrada.</div>
                }
                else
                {
                    <div class="list-group list-group-flush">
                        @foreach (var d in Model.Historico.OrderByDescending(x => x.CriadoEm))
                        {
                            <a asp-action="Details" asp-controller="Denuncia" asp-route-id="@d.Id" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@d.TipoViolencia?.Nome ?? "—"</h6>
                                    <small class="text-muted">@d.CriadoEm.ToLocalTime().ToString("g")</small>
                                </div>
                                <p class="mb-1 text-truncate">@d.Descricao</p>
                                <small class="text-muted">Status: @d.Status</small>
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Formulário de criação -->
    <div class="col-12 col-md-6 mb-4">
        <div class="card shadow-sm">
            <div class="card-header">
                <strong>Nova denúncia</strong>
            </div>
            <div class="card-body">
                @* O form envia para Denuncia/Create. Se enviar arquivos, mantenha enctype multipart/form-data. *@
                @using (Html.BeginForm("Create", "Denuncia", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    @* Campo oculto para userId (preencha via server-side quando renderizar) *@
                    <input type="hidden" name="UsuarioId" value="@ViewBag.UserId" />

                    <div class="mb-3">
                        <label for="TipoViolenciaId" class="form-label">Tipo de violência</label>
                        <select id="TipoViolenciaId" name="TipoViolencia.Id" class="form-select" required>
                            <option value="">Selecione</option>
                            @foreach (var t in Model.TiposViolencia)
                            {
                                <option value="@t.Id" @(Model.NovaDenuncia.TipoViolencia != null && Model.NovaDenuncia.TipoViolencia.Id == t.Id ? "selected" : "")>@t.Nome</option>
                            }
                        </select>
                        <span asp-validation-for="NovaDenuncia.TipoViolencia.Id" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Descricao" class="form-label">Descrição</label>
                        <textarea id="Descricao" name="Descricao" class="form-control" rows="5" required>@Model.NovaDenuncia.Descricao</textarea>
                        <span asp-validation-for="NovaDenuncia.Descricao" class="text-danger small"></span>
                    </div>

                    <h6>Endereço / Local</h6>
                    <div class="mb-3">
                        <label for="Rua" class="form-label">Rua</label>
                        <input id="Rua" name="Endereco.Rua" class="form-control" value="@Model.NovaDenuncia.Endereco?.Rua" />
                    </div>

                    <div class="row">
                        <div class="col-6 mb-3">
                            <label for="Numero" class="form-label">Número</label>
                            <input id="Numero" name="Endereco.Numero" class="form-control" value="@Model.NovaDenuncia.Endereco?.Numero" />
                        </div>
                        <div class="col-6 mb-3">
                            <label for="Cidade" class="form-label">Cidade</label>
                            <input id="Cidade" name="Endereco.Cidade" class="form-control" value="@Model.NovaDenuncia.Endereco?.Cidade" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="Observacao" class="form-label">Observações (opcional)</label>
                        <input id="Observacao" name="Observacao" class="form-control" value="" />
                    </div>

                    @* Arquivos: imagens / vídeos — o backend precisa aceitar multipart/form-data. Se não suportar, remova estes inputs. *@
                    <div class="mb-3">
                        <label class="form-label">Imagens (opcional)</label>
                        <input type="file" name="imagens" class="form-control" accept="image/*" multiple />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Vídeo (opcional)</label>
                        <input type="file" name="video" class="form-control" accept="video/*" />
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="Anonima" name="Anonima" />
                        <label class="form-check-label" for="Anonima">Enviar como denúncia anônima</label>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Enviar denúncia</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
