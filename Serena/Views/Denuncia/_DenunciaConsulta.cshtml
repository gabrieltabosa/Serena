@model DashboardViewModel<DenunciaViewModel>
@using DominioSerena



<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Data</th>
                        <th>Tipo de Violência</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="ps-4">@item.CriadoEm.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <span class="fw-bold">@item.TipoViolencia.GetDisplayName()</span>
                            </td>
                            <td>
                                @{
                                    var statusClass = item.Status == "Concluído" ? "bg-success" :
                                    item.Status == "Em Análise" ? "bg-warning text-dark" : "bg-info";
                                }
                                <span class="badge @statusClass">@item.Status</span>
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Detalhes"
                                   asp-route-id="@item.Id"
                                   asp-route-sessionId="@Model.SessionId"
                                   asp-route-userId="@Model.UserId"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-search-plus"></i> Ver Detalhes
                                </a>
                            </td>
                        </tr>
                    }
                    @if (!Model.Items.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">Nenhuma denúncia registrada até o momento.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
